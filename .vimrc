filetype indent on
filetype plugin on
set incsearch
set hlsearch
set magic
set showmatch
set background=dark
set nobackup
set nowb
set noswapfile
set expandtab
set smarttab
set shiftwidth=4
set tabstop=4
set lbr
set tw=500
set si "Smart indent
set mouse=a
map <leader>ss :setlocal spell!<cr>
inoremap <Nul> <C-n>
colorscheme ron
